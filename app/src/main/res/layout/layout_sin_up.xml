<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Psyco"
        android:textSize="50dp"
        android:fontFamily="@font/leckerlioneregular"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayoutEmailsinup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        android:layout_marginBottom="6dp">

        <com.google.android.material.textfield.TextInputEditText
            android:text="a1@gmail.com"
            android:id="@+id/txtEmailSinup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayoutPasswordsinUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:passwordToggleEnabled="true"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:text="lakhlifi"
            android:id="@+id/txtPasswordSinUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayoutPassworConfirmdsinUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:passwordToggleEnabled="true"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:text="lakhlifi"
            android:id="@+id/txtPassworConfirmdSinUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnSinUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round"
        android:text="Next"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorWhite"
        android:textSize="19dp"
        android:fontFamily="@font/leckerlioneregular"
        android:layout_marginBottom="50dp"
        android:textAllCaps="true"

        ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:textSize="17dp">
        </TextView>

        <TextView
            android:id="@+id/linkSinIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin in"
            android:textSize="25dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorAccent">
        </TextView>
    </LinearLayout>

</LinearLayout>