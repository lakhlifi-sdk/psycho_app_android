<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Psyco"
        android:textSize="50dp"
        android:fontFamily="@font/leckerlioneregular"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="80dp"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayoutEmailsinIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmailSinIn"
            android:text="a1@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlayoutPasswordsinIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:passwordToggleEnabled="true"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPasswordSinIn"
            android:text="lakhlifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnSinIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round"
        android:text="Sin In"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorWhite"
        android:textSize="19dp"
        android:fontFamily="@font/leckerlioneregular"
        android:layout_marginBottom="50dp"
        android:textAllCaps="false"
        ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account?"
            android:textSize="17dp">
        </TextView>

        <TextView
            android:id="@+id/linkSinUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="20dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorAccent">
        </TextView>
    </LinearLayout>

</LinearLayout>